Bootstrap: docker
From: fedora:27

%setup
cp -rf . $SINGULARITY_ROOTFS/src

%runscript
gdb --args quit_solve "$@"

%files

%environment

%labels

%post

dnf install -y boost-static boost-devel cmake git gcc-c++ gdb gtest-devel wget bzip2 make tbb

cd /src
rm -rf build
mkdir build
cd build

git clone https://github.com/intel/parallelstl.git

cmake .. -DCMAKE_BUILD_TYPE=FastDebug
make
make install
